
public class perfectNumberChallenge {

	public static void main(String[] args) {
		
		isPerfectNumber(100);
		
	}
	
	public static boolean isPerfectNumber(int number) {
		int sum = 0;

		if(number >0) {
			
			for(int n = 1; n < number; n++) {
				if (number % n ==0) {
					
					sum += n;
					
					//System.out.println("The factors of number " + number + " are : " + n);
					
					
				}
				return true;
				
			}
			
		}return false;
		
		
	}
	

}
