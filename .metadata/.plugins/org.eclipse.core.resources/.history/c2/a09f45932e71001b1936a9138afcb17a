
public class perfectNumberChallenge {

	public static void main(String[] args) {
		
		
		
	}
	
	public static boolean isPerfectNumber(int number) {
		
		if(number >0) {
			
			for(int n = 0; n < number; n++) {
				int sum = 0;
				if (number % n ==0) {
					
					System.out.println("The factors of number " + number + " are : " + n);
					
					sum = sum + n;
					
					if(sum == number) {
						System.out.println("The number" + number + " is a prefect number.");
						
					}
				}
				return true;
				
			}
			
		}return false;
		
		
	}
	

}
